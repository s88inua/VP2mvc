{% extends "base.html.twig" %}

{% block title %}Users{% endblock %}


{% block content %}
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Login</td>
                    <td>LastName</td>
                    <td>FirstName</td>
                    <td>MidName</td>
                    <td>Age</td>
                    <td>Desc</td>
                    <td>Role</td>
                </tr>
            </thead>
            <tbody>
            <tr>
                {% for user in users %}
                    <td>{{ user.id }}</td>
                    <td>{{ user.login }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.midname }}</td>
                    <td>{{ user.birthdate }}</td>
                    <td>{{ user.description }}</td>
                    <td>{{ user.role }}</td>
                {% endfor %}
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
